<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="2"
            android:columnCount="1">


    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="89dp"
            android:id="@+id/imageView"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/Carvis"/>


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_row="1"
                android:layout_column="0"
                android:rowCount="3"
                android:columnCount="2">


        <ImageButton
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton"
                android:layout_row="0" android:layout_column="0"
                android:src="@drawable/gas_can" android:scaleType="fitXY"/>

        <ImageButton
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton"
                android:layout_row="0" android:layout_column="1"
                android:src="@drawable/Maintainance" android:scaleType="fitXY"/>

        <ImageButton
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton"
                android:layout_row="1" android:layout_column="0"
                android:src="@drawable/dollar" android:scaleType="fitXY"/>

        <ImageButton
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton"
                android:layout_row="1" android:layout_column="1"
                android:src="@drawable/red_cross" android:scaleType="fitXY"/>

        <ImageButton
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton"
                android:layout_row="2" android:layout_column="0"
                android:src="@drawable/graph" android:scaleType="fitXY"/>

        <ImageButton
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton"
                android:layout_row="2" android:layout_column="1"
                android:src="@drawable/Map" android:scaleType="fitXY"/>
    </GridLayout>
</GridLayout>